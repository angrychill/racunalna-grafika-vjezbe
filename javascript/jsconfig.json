{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "include": [
    "**/*.js",
    "**/*.json",
    "**/*.html"
  ],
  "exclude": [
    "node_modules"
  ]
}